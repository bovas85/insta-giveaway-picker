{
  "manifest_version": 3,
  "name": "Instagram Giveaway Analyzer",
  "version": "1.0",
  "description": "Finds giveaway winners by checking comments and following status.",
  "permissions": ["activeTab", "scripting", "storage", "tabs"],
  "host_permissions": ["https://www.instagram.com/*"],
  "content_scripts": [
    {
      "matches": ["https://www.instagram.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
